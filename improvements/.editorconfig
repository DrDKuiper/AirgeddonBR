# ============================================================================
# EditorConfig - Configuração Unificada para Todos os Editores
# ============================================================================
# Este arquivo garante que diferentes editores usem as mesmas configurações
# Suportado por: VS Code, Vim, Sublime, IntelliJ, Emacs, Nano, etc
# Para mais info: https://editorconfig.org

root = true

# ============================================================================
# Padrão Global
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# ============================================================================
# Scripts Bash
# ============================================================================
[*.sh]
indent_style = space
indent_size = 4
max_line_length = 100

[*.bats]
indent_style = space
indent_size = 2
max_line_length = 100

# ============================================================================
# Markdown/Documentação
# ============================================================================
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false  # Markdown usa 2 espaços para quebra de linha
max_line_length = 120

[*.txt]
indent_style = space
indent_size = 4
max_line_length = 100

# ============================================================================
# JSON/YAML
# ============================================================================
[*.json]
indent_style = space
indent_size = 2

[*.yaml]
[*.yml]
indent_style = space
indent_size = 2

# ============================================================================
# Configuração Git
# ============================================================================
[.git*]
indent_style = space
indent_size = 4
end_of_line = lf

# ============================================================================
# Makefile (não editar indentação)
# ============================================================================
[Makefile]
indent_style = tab

# ============================================================================
# NOTAS DE CONFIGURAÇÃO
# ============================================================================
# - indent_style: space ou tab
# - indent_size: número de espaços/tabs
# - end_of_line: lf, crlf, ou cr
# - charset: utf-8, latin1, etc
# - trim_trailing_whitespace: true ou false
# - insert_final_newline: true ou false
#
# RECOMENDAÇÕES PARA DIFERENTES EDITORES:
#
# VS Code:
#   Instalar: EditorConfig for VS Code
#   Extensão ID: editorconfig.editorconfig
#
# Vim/Neovim:
#   Instalar: vim-editorconfig
#   Plugin Manager: vim-plug, Packer, etc
#
# Sublime Text:
#   Instalar: EditorConfig
#   Package Control > Install Package > EditorConfig
#
# Emacs:
#   Instalar: editorconfig-emacs
#   Via MELPA ou manual
# ============================================================================
